{
  "name": "claude-workflow",
  "version": "1.0.6",
  "description": "Automated template synchronization system for Claude Code configurations across multiple projects",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "index.js",
  "bin": {
    "claude-workflow": "bin/claude-workflow.js"
  },
  "scripts": {
    "test": "vitest --bail 1",
    "test:run": "vitest run --bail 1",
    "test:npm": "vitest run --bail 1 tests/npm-functionality",
    "test:behavior": "vitest run --bail 1 tests/behavior",
    "push": "./scripts/push.sh",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "prepublishOnly": "mv README.md README-dev.tmp && mv README-npm.md README.md",
    "postpublish": "mv README.md README-npm.md && mv README-dev.tmp README.md",
    "publish-all": "npm publish && ./scripts/update-public-repo.sh",
    "demo": "vhs demo.tape",
    "demo:publish": "./scripts/update-demo.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstacktard/claude-workflow.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "template",
    "sync",
    "configuration",
    "automation",
    "project-management",
    "backlog"
  ],
  "author": "fullstacktard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullstacktard/claude-workflow/issues"
  },
  "homepage": "https://github.com/fullstacktard/claude-workflow#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "figlet": "^1.9.2",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.38.0",
    "@vitest/ui": "^1.6.1",
    "vitest": "^1.2.0"
  }
}
